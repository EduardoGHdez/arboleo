    <%= form.text_field :latitude, class: "form-control"%>
    <%= form.label :latitude %>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :longitude, class: "form-control" %>
    <%= form.label :longitude %>
  </div>

  <hr>

  <div class="form-floating mb-3">
    <%= form.text_area :notes, class: "form-control", style: "min-height: 200px" %>
